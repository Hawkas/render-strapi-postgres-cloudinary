{
  "kind": "collectionType",
  "collectionName": "accommodations",
  "info": {
    "singularName": "accommodation",
    "pluralName": "accommodations",
    "displayName": "Accommodation",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "pluginOptions": {},
      "type": "string",
      "required": true
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "Bed & Breakfast",
        "Guesthouse",
        "Hotel"
      ],
      "required": true
    },
    "amenities": {
      "displayName": "Amenities",
      "type": "component",
      "repeatable": false,
      "component": "accommodation.amenities"
    },
    "description": {
      "type": "text",
      "required": true,
      "minLength": 30,
      "maxLength": 600
    },
    "location": {
      "type": "enumeration",
      "enum": [
        "Bergen",
        "Hardanger",
        "Voss"
      ],
      "required": false,
      "default": "Bergen"
    },
    "contactInfo": {
      "displayName": "Contact Info",
      "type": "component",
      "repeatable": false,
      "component": "accommodation.contact-info"
    },
    "rooms": {
      "type": "component",
      "repeatable": true,
      "component": "rooms.room"
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "bookings": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::booking.booking",
      "mappedBy": "accommodation"
    },
    "imagesRooms": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    }
  }
}
